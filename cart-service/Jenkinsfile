@Library('jenkins-shared-library') _

pipeline {
    agent any
    environment {
        SERVICE = 'cart-service'
        SERVICE_PORT = '3000'             // Replace with actual port your app runs on
    }
    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout') {
            steps {
                script {
                    echo "üîÑ Checking out source code..."
                    checkout scm
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    def serviceDir = "${SERVICE}/src"
                    echo "üß± Building ${SERVICE}..."

                    if (fileExists("${serviceDir}/package.json")) {
                        dir(serviceDir) {
                            bat 'npm install'
                        }
                    } else {
                        error("‚ùå package.json not found in ${serviceDir}")
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    def serviceDir = "${SERVICE}/src"
                    echo "üß™ Running tests for ${SERVICE}..."

                    if (fileExists("${serviceDir}/package.json")) {
                        dir(serviceDir) {
                            bat 'npm test'
                        }
                    } else {
                        echo "‚ö†Ô∏è No tests to run."
                    }
                }
            }
        }

        stage('Deploy to Staging') {
            steps {
                script {
                    def serviceDir = "${SERVICE}/src"
                    echo "üöÄ Deploying ${SERVICE} to Staging..."

                    // Start the app using npm start (or replace with custom command)
                    dir(serviceDir) {
                        echo "Starting the app..."
                        bat "npm start"  // Start the Node.js app (replace if needed with your start script)
                    }
                }
            }
        }
    }
}
